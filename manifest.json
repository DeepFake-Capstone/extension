{
  "manifest_version": 3,
  "name": "Fake Image Detector",
  "version": "1.0",
  "description": "Drag and drop images to detect if they are fake.",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background/background.js"
  },
  "action": {
    "default_icon": "assets/logo.png",
    "default_title": "Click to open Fake Image Detector"
  },
  "icons": {
    "16": "assets/logo.png",
    "48": "assets/logo.png",
    "128": "assets/logo.png"
  }
}
